{
  "info": {
    "name": "UmutiSafe API",
    "description": "Complete API collection for UmutiSafe Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"user\",\n  \"phone\": \"+250 788 123 456\",\n  \"location\": \"Kigali, Gasabo\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"jean.baptiste@email.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Disposals",
      "item": [
        {
          "name": "Create Disposal",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"genericName\": \"Paracetamol\",\n  \"brandName\": \"Panadol\",\n  \"dosageForm\": \"Tablet\",\n  \"packagingType\": \"Blister Pack\",\n  \"predictedCategory\": \"Analgesic\",\n  \"riskLevel\": \"LOW\",\n  \"confidence\": 0.95,\n  \"disposalGuidance\": \"Mix with coffee grounds or kitty litter\",\n  \"reason\": \"expired\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/disposals",
              "host": ["{{baseUrl}}"],
              "path": ["disposals"]
            }
          }
        },
        {
          "name": "Get My Disposals",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/disposals",
              "host": ["{{baseUrl}}"],
              "path": ["disposals"]
            }
          }
        },
        {
          "name": "Get Disposal Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/disposals/stats",
              "host": ["{{baseUrl}}"],
              "path": ["disposals", "stats"]
            }
          }
        }
      ]
    },
    {
      "name": "Medicines",
      "item": [
        {
          "name": "Get All Medicines",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/medicines",
              "host": ["{{baseUrl}}"],
              "path": ["medicines"]
            }
          }
        },
        {
          "name": "Search Medicines",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/medicines/search?q=para",
              "host": ["{{baseUrl}}"],
              "path": ["medicines", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "para"
                }
              ]
            }
          }
        },
        {
          "name": "Predict from Text",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"generic_name\": \"Paracetamol\",\n  \"brand_name\": \"Panadol\",\n  \"dosage_form\": \"Tablet\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/medicines/predict/text",
              "host": ["{{baseUrl}}"],
              "path": ["medicines", "predict", "text"]
            }
          }
        }
      ]
    },
    {
